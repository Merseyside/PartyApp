<resources>

    <!--Purple theme-->

    <!-- Base application theme. -->
    <style name="Theme.CalcApp.Purple.Base" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorOnBackground">@color/white</item>

        <item name="calcBackgroundColor">@color/grey_light</item>

        <item name="android:textColor">@color/main_text_color_purple</item>
        <item name="calcTextColor">@color/main_text_color_purple</item>
        <item name="calcSecondaryTextColor">@color/secondary_text_color_purple</item>
        <item name="calcHeadlineTextColor">@color/headline_text_color_purple</item>
        <item name="calcHighlightTextColor">@color/purple_primary</item>

        <item name="calcIconColor">@color/black</item>

        <item name="dividerHorizontal">@style/DividerStyle</item>

        <!--<item groupName="inputLayoutStrokeColor">@color/text_input_box_stroke</item>-->

    </style>

    <!--Public styles-->
    <style name="Theme.CalcApp.Purple" parent="Theme.CalcApp.Purple.Base"/>

    <style name="Theme.CalcApp.Purple.OppositeStatusBar" parent="Theme.CalcApp.Purple"/>

    <!--END OF Purple theme-->

    <style name="ToolbarTheme.Popup" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:background">@null</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColor">?attr/calcHeadlineTextColor</item>
        <item name="android:background">?attr/calcBackgroundColor</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textColorHint">@color/main_text_color_purple</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="hintTextAppearance">@style/InputLayoutHintStyle</item>
        <item name="android:paddingBottom">@dimen/small_spacing</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="errorTextColor">?attr/colorError</item>

    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?attr/calcTextColor</item>
    </style>

    <style name="InputLayoutHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomCounterTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorOnBackground</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SettingsFragmentStyle">

        <item name="android:textColorSecondary">?attr/colorOnBackground</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>

        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>

        <item name="tabRippleColor">@color/grey_dark</item>

    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

<!--    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">-->
<!--        <item name="cornerRadius">@dimen/button_corner_radius</item>-->
<!--    </style>-->

    <style name="expandedToolbarLayoutTitleColor">
        <item name="android:textSize">@dimen/very_large_text_size</item>
        <item name="android:textColor">@color/dark_blue1</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColor">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/secondary_text_color_purple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
