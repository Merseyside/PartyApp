<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="obj"
            type="com.merseyside.partyapp.presentation.view.fragment.itemList.model.ItemViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_spacing"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{view -> obj.onItemClick()}">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@{obj.title}"
            android:layout_toStartOf="@id/date"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="@{obj.price}"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@{obj.date}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/transparent_grey"
            android:layout_below="@id/price"
            android:layout_marginTop="@dimen/small_spacing"
            android:visibility="@{obj.last ? View.GONE : View.VISIBLE}"/>

    </RelativeLayout>

</layout>