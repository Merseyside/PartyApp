<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_spacing"
    android:foreground="@drawable/card_view_ripple">

    <com.merseyside.archy.presentation.view.circleView.CircleTextView
        android:id="@+id/circle"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_alignParentStart="true"
        app:сolor="?attr/colorSecondaryVariant"
        app:textColor="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/small_spacing"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_toEndOf="@+id/circle"/>

</RelativeLayout>
